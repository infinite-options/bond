                        </StackLayout>
                    </Frame>
                </StackLayout>
                <StackLayout Grid.Row="1">
                     <Label x:Name="DisplayQuestion" TextColor="Black" Margin="10,10,40,0" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"></Label>
