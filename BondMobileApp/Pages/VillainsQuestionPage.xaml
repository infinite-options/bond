                         <RadioButton x:Name="Option0" CheckedChanged="RadioButton_CheckedChanged" IsChecked="False"></RadioButton>
                         <RadioButton x:Name="Option1" CheckedChanged="RadioButton_CheckedChanged" IsChecked="False"></RadioButton>
                         <RadioButton x:Name="Option2" CheckedChanged="RadioButton_CheckedChanged" IsChecked="False"></RadioButton>
                         <RadioButton x:Name="Option3" CheckedChanged="RadioButton_CheckedChanged" IsChecked="False"></RadioButton>
                     </StackLayout>
                    <!--Button-->

                     <Button Text="Results Page" Clicked="Button_Clicked"  TextColor="White"  BackgroundColor="Blue" Margin="80,0"></Button>

                </StackLayout>
                <StackLayout Grid.Row="2" Margin="0,0,0,-20" >
                    <Frame BackgroundColor="#691010" VerticalOptions="FillAndExpand" HasShadow="False" IsVisible="True" CornerRadius="22" Padding="25,10,10,30">
                        <StackLayout>
                            <Grid VerticalOptions="CenterAndExpand" RowSpacing="25">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="5*"></ColumnDefinition>
                             <ColumnDefinition Width="*"></ColumnDefinition>
                         </Grid.ColumnDefinitions>
                         <Grid.RowDefinitions>
                             <RowDefinition></RowDefinition>
                             <RowDefinition></RowDefinition>
                             <RowDefinition></RowDefinition>
                         </Grid.RowDefinitions>
                         <Label Text="Number of Questions asked: " TextColor="White" Grid.Row="0" Grid.Column="0" FontAttributes="Bold"></Label>
                         <Label  x:Name="NumQuestions"  TextColor="White" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="1" FontAttributes="Bold"></Label>
                         <Label Text="Total Number of Correct Answers" TextColor="White" Grid.Row="1" Grid.Column="0" FontAttributes="Bold"></Label>
                         <Label  x:Name="NumCorrect" TextColor="White" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="1" FontAttributes="Bold"></Label>
                         <Label Text="Total Number of Incorrect Answers" TextColor="White" Grid.Row="2" Grid.Column="0" FontAttributes="Bold"></Label>
                         <Label  x:Name="NumWrong" TextColor="White" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="1" FontAttributes="Bold"></Label>
                     </Grid>
                        </StackLayout>
                    </Frame>
                </StackLayout>





